datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // <- points to .env DATABASE_URL
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String   @id @default(uuid())
  vendorId    String
  name        String
  description String?
  price       Decimal
  stock       Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id   String @id @default(uuid())
  name String @unique
}
