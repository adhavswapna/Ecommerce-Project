datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cart {
  id        String     @id @default(uuid())
  userId    String
  updatedAt DateTime   @updatedAt
  items     CartItem[]
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  productId String
  quantity  Int
  price     Decimal

  cart Cart @relation(fields: [cartId], references: [id])

  @@unique([cartId, productId]) // ðŸ”¥ prevents duplicates
}

