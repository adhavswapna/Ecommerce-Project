datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // <- points to .env DATABASE_URL
}

generator client {
  provider = "prisma-client-js"
}

model Cart {
  id        String     @id @default(uuid())
  userId    String
  updatedAt DateTime   @updatedAt
  items     CartItem[]
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  productId String
  quantity  Int
  price     Decimal

  cart      Cart     @relation(fields: [cartId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}

model Product {
  id    String   @id @default(uuid())
  name  String
  price Decimal
  stock Int

  cartItems CartItem[]
}
