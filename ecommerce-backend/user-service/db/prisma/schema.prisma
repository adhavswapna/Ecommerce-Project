generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  VENDOR
  ADMIN
}

model User {
  id        String   @id
  email     String   @unique
  role      Role
  name      String?
  phone     String?
  createdAt DateTime @default(now())
}
