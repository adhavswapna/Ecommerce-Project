// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // <- points to .env DATABASE_URL
}

generator client {
  provider = "prisma-client-js"
}

// Your EmailLog model
model EmailLog {
  id        String      @id @default(uuid())
  to        String
  subject   String
  status    EmailStatus @default(PENDING)
  error     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum EmailStatus {
  PENDING
  SENT
  FAILED
}
